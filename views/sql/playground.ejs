<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% include ../imports.ejs %>

    <title>SQL playground</title>

    <script src="../../javascripts/playground.js" async></script>
</head>

<body>
    <% include ../nav.ejs %>

        <div class="display-3 m-2 text-center p-2">
            <span class="fw-bold">SQL Injection</span> Playground
        </div>

        <section>
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="../../images/sql-inject.png"
                            class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-4">
                        <div>
                            <div id="form-message-info">
                                
                            </div>
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="text" id="username" class="form-control form-control-lg"
                                    placeholder="Enter username" />
                                <label class="form-label" for="username">Username</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-3">
                                <input type="password" id="password" class="form-control form-control-lg"
                                    placeholder="Enter password" />
                                <label class="form-label" for="password">Password</label>

                                <div class="form-check small">
                                    <input class="form-check-input" type="checkbox" value="" 
                                        name="passwordToogle" id="passwd-toogler">
                                    
                                    <label class="form-check-label" for="passwd-toogler">
                                      Show Password
                                    </label>
                                </div>

                                <div class="form-check small">
                                    <input class="form-check-input" type="checkbox" value="" 
                                        name="passwordToogle" id="secure-toogler">
                                    
                                    <label class="form-check-label" for="secure-toogler">
                                      Toogle secure
                                    </label>
                                </div>

                            </div>

                            
                            <div class="text-center text-lg-start mt-4 pt-2">
                                <button type="button" id="login-btn" class="btn btn-outline-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>

    
    <script>

    </script>
</body>

</html>